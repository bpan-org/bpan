# BPAN System Config
#
# This file contains various 'constants' needed by BPAN.
# Usually these are not changed, but they overridden for testing or setting
# up a custom system.

[bpan]
version = 0.1.75


# Directory where bpan installs packages.
# This can be overridden with BPAN_INSTALL variable.
[install]
prefix = $BPAN_ROOT/local


# Main Git hosting entry:
[host "github"]
clone = https://github.com/$owner/$name
api = https://api.github.com/repos


# The main default BPAN package index:
[index "bpan"]
repo = bpan-org/bpan-index
clone = https://github.com/$index.bpan.repo
branch = main
file = index.ini
host = github
owner = bpan-org
api = $host.github.api/$index.bpan.repo
publish = $index.bpan.api/issues/1/comments


# Default template directory:
[template "bpan"]
add = $BPAN_ROOT/share/add


# Settings for test environments:
[test]
docker-image = ingy/bpan-testing:0.1.0
