# shellcheck shell=bash

# Bash shell:
test -n "$BASH_VERSION" && eval '
BPAN_ROOT=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
export BPAN_ROOT
source <("$BPAN_ROOT/bin/bpan" rc --bash)
'

# Fish shell:
test -n "$FISH_VERSION" && eval '
set BPAN_ROOT (cd (dirname (status filename)) && pwd)
export BPAN_ROOT
source ("$BPAN_ROOT/bin/bpan" rc --fish | psub)
'

# Ksh shell:
test -n "$KSH_VERSION" && eval '
BPAN_ROOT=$(
  cd "$(
    dirname "$(
      fc -l |
        tail -2 |
        head -1 |
        awk '"'"'{print $NF}'"'"'
    )"
  )" && pwd
)
export BPAN_ROOT
source <("$BPAN_ROOT/bin/bpan" rc --ksh)
'

# Zsh shell:
test -n "$ZSH_VERSION" && eval '
BPAN_ROOT=$(cd "$(dirname "$0")" && pwd)
export BPAN_ROOT
source <("$BPAN_ROOT/bin/bpan" rc --zsh)
'
