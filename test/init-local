#!/bash

bpan:source git-utils --

test-errors() {
  while read -r cmd && read -r msg; do
    cmd=${cmd#> }
    has "$(BPAN_TESTING=1 $cmd 2>&1)" "$msg" \
      "'$cmd' fails with: $msg"
  done
}

test-install-setup() {
  export BPAN_INSTALL=$PWD//test/local
  rm -fr "$BPAN_INSTALL"
  mkdir -p "$BPAN_INSTALL"

  I=$BPAN_INSTALL

  trap test-install-teardown exit
}

test-install-teardown() (
  rm -fr ./test/local
)

# XXX move this mac fix to bashplus
if +os-macos; then
  if +can uuidgen; then
    +sym() (
      s=$(uuidgen)
      echo "${1:-sym}_${s//-/_}"
    )
  else
    +sym() (
      echo "${1:-sym}_$(gdate '+%s_%N')"
    )
  fi
fi
